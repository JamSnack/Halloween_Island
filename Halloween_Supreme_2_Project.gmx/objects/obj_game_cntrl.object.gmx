            <string>///Draw UI and other elements.

//Draw game timer
draw_set_font(global.fnt_outlined);
draw_set_color(c_white);

var scale = 0.75;
var str_time = string(game_time_h)+":"+string(game_time_m)+":"+string(game_time_s)+"."+string(game_time_ms);
draw_text(10,10,str_time);

if !instance_exists(obj_battleControl)
{

    //Draw game difficulty
    draw_text_transformed(10,28,"Difficulty: "+string(difficulty),scale,scale,0);
    draw_text_transformed(10,36,"Maze Difficulty: "+string(maze_difficulty),scale,scale,0);
    
    //Draw keys remaining
    if instance_exists(obj_key)
    {
        draw_text_transformed(10,20,"Keys remaining: "+string(instance_number(obj_key)),scale,scale,0);
    } else draw_text_transformed(10,20,"Door Unlocked",scale,scale,0);
    
    //Draw XP
    scale = 0.6;
    draw_text_transformed(10,218,"EXP: "+string(global.player_stats[STATS.xp])+"/"+string(target_xp)+" Level: "+string(global.player_stats[STATS.level]),scale,scale,0);
    
    //Draw HP and MP
    draw_set_color(c_red);
    draw_text_transformed(10,212,"HP: "+string(global.player_stats[STATS.hp])+"/"+string(global.player_stats[STATS.maxHp]),scale,scale,0);
    draw_set_color(c_aqua);
    draw_text_transformed(10,206,"MP: "+string(global.player_stats[STATS.mp])+"/"+string(global.player_stats[STATS.maxMp]),scale,scale,0);
}

if game_state == "PAUSE"
{
    draw_set_halign(fa_center);
    draw_set_valign(fa_middle);
    draw_set_font(global.fnt_normal);
    
    var str = "GAME PAUSED";
    var str_w = string_width(str);
    var str_h = string_height(str);
    var xx = 256/2;
    var yy = 256/2;
    
    draw_set_colour(c_black);
    draw_rectangle(xx-str_w*2,yy-str_h,xx+str_w*2,yy+str_h,false);
    
    draw_set_colour(c_white);
    draw_text_transformed(xx,yy,str,3,3,0);
    
    
    draw_set_halign(fa_left);
    draw_set_valign(fa_top);
}
else if game_state == "DEATH"
{
    draw_set_halign(fa_center);
    draw_set_valign(fa_middle);
    draw_set_font(global.fnt_normal);
    
    var str = "YOU DIED";
    var str_w = string_width(str);
    var str_h = string_height(str);
    var xx = 256/2;
    var yy = 256/2;
    
    draw_set_colour(c_black);
    draw_rectangle(xx-str_w*2,yy-str_h,xx+str_w*2,yy+str_h,false);
    
    draw_set_colour(c_red);
    draw_text_transformed(xx,yy,str,3,3,0);
    
    
    draw_set_halign(fa_left);
    draw_set_valign(fa_top);
    
    
    //Death fade
    draw_sprite_stretched_ext(spr_black,0,0,0,256,224,c_white,death_fade);
}
else if game_state == "WIN"
{
    //WIN(death) fade
    draw_sprite_stretched_ext(spr_black,0,0,0,256,224,c_white,death_fade);

    draw_set_halign(fa_center);
    draw_set_valign(fa_middle);
    draw_set_font(global.fnt_normal);
    
    var str = "YOU ESCAPED";
    var str_w = string_width(str);
    var str_h = string_height(str);
    var xx = 256/2;
    var yy = 256/2-60;
    
    draw_set_colour(c_black);
    draw_rectangle(xx-str_w*2,yy-str_h,xx+str_w*2,yy+str_h,false);
    
    draw_set_colour(c_white);
    draw_text_transformed(xx,yy-15,"Congratulations!",2,2,0);
    draw_text_transformed(xx,yy,str,3,3,0);
    
    draw_set_halign(fa_left);
    draw_text(xx,yy+15,"Your time: "+str_time);
    draw_set_valign(fa_top);
}

if game_state == "DEATH" || game_state == "WIN"
{
    draw_set_font(global.fnt_outlined);
    draw_set_colour(c_white);
    draw_text(5,210,"Press 'Esc', 'Z', or 'X' to return to the menu.");
}

